<h2>Active posts</h2>
<table border="1">
  <tbody>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Posted on</th>
      <th>Expires on</th>
    </tr>

    <% for x in @the_posts %>
      <% if x.expires_on > @today %> 
        <tr>
          <td><%= x.title %></td>
          <td><%= x.body %></td>
          <td><%= x.created_at.strftime("%b %e, %Y") %></td>
          <td><%= x.expires_on.strftime("%b %e, %Y") %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<h2>Expired posts</h2>
<table border="1">
  <tbody>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Posted on</th>
      <th>Expires on</th>
    </tr>

    <% for x in @the_posts %>
      <% if x.expires_on < @today %> 
        <tr>
          <td><%= x.title %></td>
          <td><%= x.body %></td>
          <td><%= x.created_at %></td>
          <td><%= x.expires_on %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
